<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/SeleccionPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ImagenPerfil"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/profesor"
            android:scaleType="centerCrop"
            android:layout_margin="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del Docente"
                android:textStyle="bold"
                android:textColor="@color/purple"
                android:textSize="15sp"
                android:fontFamily="@font/architects_daughter"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/TxtNombreDocente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--------------"
                android:fontFamily="@font/architects_daughter"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:maxLines="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ciudad"
                android:textStyle="bold"
                android:textColor="@color/purple"
                android:textSize="15sp"
                android:fontFamily="@font/architects_daughter"
                android:layout_marginTop="30dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ubicacion"/>

                <TextView
                    android:id="@+id/TxtUbicacionDocente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="ChiquinqurÃ¡"
                    android:fontFamily="@font/architects_daughter"
                    android:textSize="14sp"
                    android:maxLines="1"/>

                <TextView
                    android:id="@+id/TxtTelefonoDocente"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/TxtAsignatura"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/TxtInformacion"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/TxtId"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="invisible"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>