<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetallesAnuncio">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <io.github.florent37.shapeofview.shapes.DiagonalView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:elevation="4dp"
            app:shape_diagonal_angle="10"
            app:shape_diagonal_position="bottom">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/fondo" />

            <ImageView
                android:id="@+id/AtrasDetallesAnuncio"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/baseline_arrow_back_ios_new_24_white"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/TxtNombreDetallesAnuncio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_gravity="center|right"
                android:fontFamily="@font/architects_daughter"/>

        </io.github.florent37.shapeofview.shapes.DiagonalView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:layout_marginRight="25dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ubicacion"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/TxtUbicacionDetallesAnuncio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:text="Chiquinquira"
                android:fontFamily="@font/architects_daughter"/>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp">

                <TextView
                    android:id="@+id/TxtAsignaturaDetallesAnuncio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Asignatura"
                    android:textSize="34dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/architects_daughter"
                    android:layout_marginTop="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/TxtInformacionDetallesAnuncio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean finibus suscipit purus nec egestas. Sed at tincidunt lorem, ac lobortis erat. Sed eget tortor id dui lobortis consectetur. Duis interdum suscipit arcu"
                        android:textSize="17dp"
                        android:fontFamily="@font/architects_daughter"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/AccionNumeroDetallesAnuncio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/whatsapp"
                        android:layout_marginRight="10dp"/>

                    <TextView
                        android:id="@+id/TxtTelefonoDetallesAnuncio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="300000000"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:textColor="#4CAE50"
                        android:fontFamily="@font/architects_daughter"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ImgDocenteDetallesAnuncio"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/profesor"
        android:layout_gravity="center|top"
        app:civ_border_width="5dp"
        app:civ_border_color="#F0F0F0"
        android:layout_marginTop="140dp"
        android:layout_marginRight="180dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>